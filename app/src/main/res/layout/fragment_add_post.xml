<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="post"
            type="com.example.photobook.data.Post" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_post_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--TODO make it scroll view-->
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:autofillHints="Title"
                android:hint="@string/title"
                android:inputType="text"
                android:text="@={post.title}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/medium_dimension"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="body"
                android:hint="@string/body_description"
                android:inputType="textUri|textMultiLine"
                android:lines="6"
                android:maxLines="12"
                android:scrollbars="vertical"
                android:text="@={post.body}"
                app:layout_constraintBottom_toTopOf="@+id/take_picture_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <ImageView
                android:id="@+id/take_picture_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/ic_menu_camera"
                android:contentDescription="@string/take_a_picture_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/body"
                tools:text="Picture" />
            <!-- TODO draw a take a picture image -->

            <TextView
                android:id="@+id/take_picture_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="@dimen/small_dimension"
                android:text="@string/take_a_picture"
                app:layout_constraintBottom_toBottomOf="@id/take_picture_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/take_picture_button"
                app:layout_constraintTop_toTopOf="@id/take_picture_button"
                tools:text="take a picture" />

            <ImageView
                android:id="@+id/take_video_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/small_dimension"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/small_dimension"
                android:contentDescription="@string/take_a_video_description"
                android:src="@android:drawable/presence_video_online"
                app:layout_constraintEnd_toEndOf="@+id/take_picture_button"
                app:layout_constraintStart_toStartOf="@id/take_picture_button"
                app:layout_constraintTop_toBottomOf="@id/take_picture_button"
                tools:text="Picture" />
            <!-- TODO draw a take a picture image -->

            <TextView
                android:id="@+id/take_video_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="@dimen/small_dimension"
                android:text="@string/take_a_video"
                app:layout_constraintBottom_toBottomOf="@id/take_video_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/take_picture_button"
                app:layout_constraintTop_toTopOf="@id/take_video_button"
                tools:text="take a picture" />


            <!-- TODO draw a take a picture image -->

            <ImageView
                android:id="@+id/taken_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/newly_added_image_description"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/taken_image1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/take_video_button" />

            <Button
                android:id="@+id/delete_taken_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:hint="@string/delete_image_button_description"
                app:icon="@android:drawable/ic_delete"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/taken_image"
                app:layout_constraintTop_toTopOf="@id/taken_image" />
            <ImageView
                android:id="@+id/taken_image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/newly_added_image_description"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/taken_image2"
                app:layout_constraintStart_toEndOf="@id/taken_image"
                app:layout_constraintTop_toTopOf="@+id/taken_image" />


            <Button
                android:id="@+id/delete_taken_image2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"
                android:hint="@string/delete_image_button_description"
                app:icon="@android:drawable/ic_delete"
                app:layout_constraintEnd_toEndOf="@id/taken_image1"
                app:layout_constraintTop_toTopOf="@id/taken_image1" />

            <ImageView
                android:id="@+id/taken_image2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/newly_added_image_description"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/taken_image1"
                app:layout_constraintTop_toTopOf="@+id/taken_image1" />
            <Button
                android:id="@+id/delete_taken_image3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"
                android:hint="@string/delete_image_button_description"
                app:icon="@android:drawable/ic_delete"
                app:layout_constraintEnd_toEndOf="@id/taken_image2"
                app:layout_constraintTop_toTopOf="@id/taken_image2" />
            <TextView
                android:id="@+id/taken_image2_text"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textAlignment="center"
                android:gravity="center"
                android:visibility="gone"
                tools:text="yes oh"
                android:background="@color/primaryTransparent"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/taken_image1"
                app:layout_constraintTop_toTopOf="@+id/taken_image1" />

            <VideoView
                android:id="@+id/taken_video"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/taken_video_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/taken_image" />


            <Button
                android:id="@+id/delete_taken_video"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"
                app:icon="@android:drawable/ic_delete"
                android:textColor="@color/red"
                app:layout_constraintEnd_toEndOf="@id/taken_video"
                app:layout_constraintTop_toTopOf="@id/taken_video" />

            <VideoView
                android:id="@+id/taken_video_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/taken_video_2"
                app:layout_constraintStart_toEndOf="@id/taken_video"
                app:layout_constraintTop_toTopOf="@+id/taken_video" />

            <Button
                android:id="@+id/delete_taken_video1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"
                app:icon="@android:drawable/ic_delete"
                app:layout_constraintEnd_toEndOf="@id/taken_video_1"
                app:layout_constraintTop_toTopOf="@id/taken_video_1" />

            <VideoView
                android:id="@+id/taken_video_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/taken_video_1"
                app:layout_constraintTop_toTopOf="@+id/taken_video_1" />

            <Button
                android:id="@+id/delete_taken_video2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"
                app:icon="@android:drawable/ic_delete"
                app:layout_constraintEnd_toEndOf="@id/taken_video_2"
                app:layout_constraintTop_toTopOf="@id/taken_video_2" />

            <TextView
                android:id="@+id/taken_video2_text"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textAlignment="center"
                android:gravity="center"
                android:visibility="gone"
                tools:text="yes oh"
                android:background="@color/primaryTransparent"
                android:textColor="@color/primaryTextColor"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/taken_video_1"
                app:layout_constraintTop_toTopOf="@+id/taken_video_1" />

            <Button
                android:id="@+id/save_post_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/save_post_button_description"
                android:text="@string/save_post"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/taken_video" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
